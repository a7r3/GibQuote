<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TranslucentAppTheme" parent="@style/AnotherAppTheme">
        <item name="colorPrimary">#80000000</item>
        <item name="colorPrimaryDark">#99000000</item>
        <item name="colorAccent">#B3FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="about_libraries_card">@color/colorTranslucent</item>
        <item name="fab_icon_color">#FF000000</item>
        <item name="style_icon_color">#FF000000</item>
        <item name="icon_color">#FFFFFFFF</item>
    </style>

    <style name="AppTheme" parent="@style/PreferenceFixTheme.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="about_libraries_window_background">@color/about_libraries_window_background
        </item>
        <item name="about_libraries_card">@color/about_libraries_card</item>
        <item name="about_libraries_title_openSource">@color/about_libraries_title_openSource</item>
        <item name="about_libraries_text_openSource">@color/about_libraries_text_openSource</item>
        <item name="about_libraries_special_button_openSource">
            @color/about_libraries_special_button_openSource
        </item>
        <item name="about_libraries_dividerDark_openSource">
            @color/about_libraries_dividerDark_openSource
        </item>
        <item name="about_libraries_dividerLight_openSource">
            @color/about_libraries_dividerLight_openSource
        </item>
        <item name="fab_icon_color">#FFFFFFFF</item>
        <item name="style_icon_color">#FF000000</item>
        <item name="icon_color">#FFFFFFFF</item>
    </style>

    <style name="someStyle">
        <item name="android:background">?colorPrimaryDark</item>
    </style>

    <style name="someFabStyle">
        <item name="android:backgroundTint" tools:targetApi="lollipop">?colorAccent</item>
    </style>

    <style name="AnotherAppTheme" parent="@style/PreferenceFixTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="about_libraries_card">@color/about_libraries_card_dark</item>
        <item name="about_libraries_window_background">
            @color/about_libraries_window_background_dark
        </item>
        <item name="about_libraries_title_openSource">@color/about_libraries_title_openSource_dark
        </item>
        <item name="about_libraries_text_openSource">@color/about_libraries_text_openSource_dark
        </item>
        <item name="about_libraries_special_button_openSource">
            @color/about_libraries_special_button_openSource_dark
        </item>
        <item name="about_libraries_dividerDark_openSource">
            @color/about_libraries_dividerDark_openSource_dark
        </item>
        <item name="about_libraries_dividerLight_openSource">
            @color/about_libraries_dividerLight_openSource_dark
        </item>
        <item name="fab_icon_color">#FFFFFFFF</item>
        <item name="style_icon_color">#FFFFFFFF</item>
        <item name="icon_color">#FFFFFFFF</item>
    </style>

    <style name="actionBarFontAppearance">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="aboutFontAppearance">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="tapTargetFontAppearance">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="color">@android:color/white</item>
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TextAppearance</item>
        <item name="subtitleTextAppearance">@style/Theme.MyTheme.Toolbar.TextAppearance.Subtitle
        </item>
    </style>

    <style name="AppTheme.Toolbar.TextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.MyTheme.Toolbar.TextAppearance.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Dialog.FixedSize">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>